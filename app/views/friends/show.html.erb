

<div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
  <div class="card-header"><h5><%=  @friend.first_name + " " + @friend.last_name %></h5></div>
  <div class="card-body">
  <div> 
    <h6 class="card-title">Email</h6>
    <%= @friend.email %>
  </div>
  <br/>
  <div> 
    <h6 class="card-title">Phone</h6>
    <%= @friend.phone %>
  </div>
  <br/>
  <div> 
    <h6 class="card-title">Twitter</h6>
    <%= @friend.twitter %>
  </div>
  <br/>
  </div>
  <div>
    <%= link_to "Edit Information", edit_friend_path(@friend), class:"btn btn-light" %>
    <%= link_to "Back to friends", friends_path, class:"btn btn-secondary"  %>
    <%= button_to "Delete Friend", @friend, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } },class:"btn btn-outline-danger" %>
  </div>
</div>




  